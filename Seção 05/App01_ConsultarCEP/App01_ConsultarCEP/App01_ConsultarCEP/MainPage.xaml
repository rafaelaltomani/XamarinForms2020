             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="App01_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#00253E" Padding="30" Spacing="30">
        <!-- Place new controls here -->
        <Image Source="logo2.png" x:Name="LOGO"/>
        <Entry Placeholder="Digite o CEP" PlaceholderColor="#FFBF00" BackgroundColor="White" x:Name="CEP"/>
        <Button Text="BUSCAR CEP" TextColor="White"  BackgroundColor="#42B602" x:Name="BOTAO"/>
        <Label Text="" x:Name="RESULTADO"
